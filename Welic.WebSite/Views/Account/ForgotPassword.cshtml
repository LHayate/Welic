@model Welic.WebSite.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot your password?";
}

<br />
<br />


@using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal container", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="container"><h6>Digite seu e-mail para recuperar sua senha:</h6></div>
    
    
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">        
        <div class="col-md-10 container">

            @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label black-text", @for = "email" })
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control Validate black-text", id = "email", @type = "text", placeholder = "Placeholder" })
        </div>
    </div>
    <div class="form-group">              
        <div class="input-field col s12 center-align">
            <button class="btn waves-effect waves-light" type="submit" name="action" value="Email_Link">
                Submit
                <i class="material-icons right">send</i>
            </button>
        </div>        
    </div>
}

